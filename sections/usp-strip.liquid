{% style %}
    .usp-strip {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    @media screen and (min-width: 750px) {
      .usp-strip {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  
    .usp-strip__grid {
      display: grid;
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      gap: 16px;
    }
  
    .usp-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
    }
  
    .usp-item__icon {
      width: 120px;
      height: 120px;
      flex-shrink: 0;
    }
  
    .usp-item__icon img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
  
    .usp-item__text {
      font-size: 0.875rem;
      font-weight: 600;
      line-height: 1.3;
    }
  
    @media screen and (max-width: 749px) {
      .usp-strip__grid {
        grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      }
  
      .usp-item {
        justify-content: flex-start;
        text-align: left;
      }

      .usp-item__icon {
        width: 60px;
        height: 60px;
        flex-shrink: 0;
      }
    }
  {% endstyle %}
  
  <div class="usp-strip color-{{ section.settings.color_scheme }} gradient">
    <div class="page-width">
        <div class="usp__title title-wrapper title-wrapper--no-top-margin">
            {%- if section.settings.title != blank -%}
            <h2 class="title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                {{ section.settings.title }}
              </h2>
            {% endif %}
        </div>
      <div class="usp-strip__grid">
        {% for block in section.blocks %}
          <div class="usp-item" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <div class="usp-item__icon">
                <img
                  src="{{ block.settings.icon | image_url: width: 56 }}"
                  alt="{{ block.settings.text | escape }}"
                  loading="lazy"
                >
              </div>
            {% endif %}
            <div class="usp-item__text">
              <h3>{{ block.settings.text }}</h3>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  
  {% schema %}
  {
    "name": "USP Strip",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color scheme",
        "default": "scheme-1"
      },
      {
        "type": "inline_richtext",
        "id": "title",
        "default": "USP title",
        "label": "Title"
      },
      {
        "type": "select",
        "id": "heading_size",
        "options": [
            {
            "value": "h2",
            "label": "t:sections.all.heading_size.options__1.label"
            },
            {
            "value": "h1",
            "label": "t:sections.all.heading_size.options__2.label"
            },
            {
            "value": "h0",
            "label": "t:sections.all.heading_size.options__3.label"
            },
            {
            "value": "hxl",
            "label": "t:sections.all.heading_size.options__4.label"
            },
            {
            "value": "hxxl",
            "label": "t:sections.all.heading_size.options__5.label"
            }
        ],
        "default": "h1",
        "label": "t:sections.all.heading_size.label"
      },
      {
        "type": "range",
        "id": "columns_desktop",
        "label": "Desktop columns",
        "min": 2,
        "max": 4,
        "step": 1,
        "default": 4
      },
      {
        "type": "range",
        "id": "columns_mobile",
        "label": "Mobile columns",
        "min": 1,
        "max": 4,
        "step": 1,
        "default": 1
      },
      {
        "type": "header",
        "content": "Section padding"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 80,
        "step": 4,
        "unit": "px",
        "label": "Padding top",
        "default": 24
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 80,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 24
      }
    ],
    "blocks": [
      {
        "type": "usp",
        "name": "USP item",
        "limit": 4,
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "Premium quality"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "USP Strip"
      }
    ]
  }
  {% endschema %}
  